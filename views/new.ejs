<% include partials/header %>

<div class="ui main  text segment container">
  <div class="ui huge  header">New Blog</div>
  <form class="ui form " action="/blog" method="post">
    <div class="field">
      <label >Title</label>
      <input type="text"  name="blog[title]" placeholder="blog title ...">
    </div>
    <div class="field">
      <label >Image url</label>
      <input type="text"  name="blog[url]" placeholder="blog url ...">
    </div>
    <div class="field">
      <label >Description</label>
      <textarea name="blog[description]" placeholder="description about this post ..."></textarea>
    </div>
    <button class="ui button basic purple">Submit</button>
  </form>
</div>

